<p id="notice"><%= notice %></p>

<div class="banner" >
  <h1>
    <%= @cocktail.name %>
  </h1>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-offset-3 col-xs-6">
      <div class="list">
        <h3>Ingredients:</h3>
        <ul>
          <% @cocktail.doses.each do |dose| %>
          <li> <%= dose.description %> <%= dose.ingredient.name %> </li>
          <% end %>
        </ul>
        <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %> |
        <%= link_to 'Delete cocktail', @cocktail, method: :delete, data: { confirm: 'Are you sure?' } %> |
        <%= link_to 'Back', cocktails_path %>
        <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, width: 200, height: 200, crop: :fill %>
        <% end %>
      </div>
    </div>
  </div>
</div>
